<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <!-- Customize your theme here. -->
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/semi_black</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LabelStyle">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/semi_black</item>
        <item name="android:textColor">@color/semi_white</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AuthButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">roboto</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/auth_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/auth_vertical_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/auth_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/auth_vertical_margin</item>
        <item name="android:background">@color/red_light</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="PostingTextViewStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">roboto</item>
    </style>

    <style name="PostingButtonTextStyle" parent="PostingTextViewStyleBase">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PostingTextViewStyle" parent="PostingTextViewStyleBase">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@color/auth_view_bg"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:layout_marginTop="@dimen/auth_vertical_margin"
                    android:textColor="#454F63"
                    android:text=""
                    tools:text="123132123123"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phoneEditText"
                    android:importantForAutofill="no"/>

            <TextView android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/auth_vertical_margin"
                      android:textColor="#78849E"
                      android:textSize="15sp"
                      android:text="You can change the phone number linked to your account."
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/auth_vertical_margin"
                      android:textColor="#78849E"
                      android:textSize="15sp"
                      android:text="After you tap '\send code'\, the application will send you an sms with confirmation code."
                      android:layout_height="wrap_content"/>

            <Button android:id="@+id/sendSMSCode"
                    style="@style/AuthButtonStyle"
                    android:text="SEND CODE"/>
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:background="@color/auth_view_bg"
            android:id="@+id/authLoadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/loadingMessage"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textColor="#454F63"
                  android:text="@string/verifying_phone_number"
                  android:layout_height="wrap_content"/>
        <ProgressBar android:layout_width="wrap_content"
                     android:id="@+id/loadingProgressBar"
                     app:layout_constraintTop_toBottomOf="@id/loadingMessage"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginTop="30dp"
                     android:indeterminate="true"
                     android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:background="@color/auth_view_bg"
            android:id="@+id/authResultView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/authResultMessage"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textColor="#454F63"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/authResultErrorIcon"
                   android:visibility="gone"
                   android:src="@drawable/auth_error"
                   app:layout_constraintTop_toBottomOf="@id/authResultMessage"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginTop="30dp"
                   android:indeterminate="true"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:visibility="gone"
                   android:id="@+id/authResultSuccessIcon"
                   android:src="@drawable/auth_success"
                   app:layout_constraintTop_toBottomOf="@id/authResultMessage"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginTop="30dp"
                   android:indeterminate="true"
                   android:layout_height="wrap_content"/>
        <Button app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/authTryAgain"
                style="@style/AuthButtonStyle"
                android:text="TRY AGAIN"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@color/auth_view_bg"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            android:layout_marginTop="@dimen/auth_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:gravity="center"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="We have sent you the code via sms"
                    android:textSize="15sp"
                    android:textColor="#78849E"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="84dp">

                <EditText
                        android:gravity="center"
                        android:layout_marginTop="@dimen/auth_vertical_margin"
                        android:textColor="#454F63"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/phoneEditText"
                        android:importantForAutofill="no"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/phoneEditText"
                          android:visibility="gone"
                          android:textSize="12sp"
                          android:text="Invalid code"
                          android:textColor="#FF7777"
                          android:id="@+id/invalidCode"/>

            </RelativeLayout>

            <TextView android:layout_width="match_parent"
                      android:gravity="center"
                      android:layout_marginTop="@dimen/auth_vertical_margin"
                      android:textColor="@color/colorPrimary"
                      android:textSize="15sp"
                      android:text="You haven\'t received the code"
                      android:layout_height="wrap_content"/>

            <Button android:id="@+id/confirmSMSCode"
                    style="@style/AuthButtonStyle"
                    android:text="CONTINUE"/>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:background="@color/auth_view_bg"
            android:id="@+id/codeCheckLoadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/loadingMessage"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textColor="#454F63"
                  android:text="@string/verifying_the_code"
                  android:layout_height="wrap_content"/>
        <ProgressBar android:layout_width="wrap_content"
                     android:id="@+id/loadingProgressBar"
                     app:layout_constraintTop_toBottomOf="@id/loadingMessage"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginTop="30dp"
                     android:indeterminate="true"
                     android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
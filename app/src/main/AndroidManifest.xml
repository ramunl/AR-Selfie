<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="us.cyberstar.arcyber">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- OPEN CV permissions -->
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:name="android.hardware.camera.front"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus"/>


    <!--
 This tag indicates that this application requires ARCore.  This results in the application
         only being visible in the Google Play Store on devices that support ARCore.
    -->
    <uses-feature
            android:name="android.hardware.camera.ar"
            android:required="true"/>
    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/>

    <application
            android:name="us.cyberstar.presentation.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning"
            tools:replace="android:name">


        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name="us.cyberstar.presentation.feature.scenes.devScene.view.DevActivity"
                android:screenOrientation="portrait"/>

        <activity android:name="us.cyberstar.presentation.feature.scenes.authScene.view.AuthActivity"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait"
        />
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name="us.cyberstar.presentation.feature.scenes.mainScene.view.MainActivity"
                android:screenOrientation="portrait"/>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="us.cyberstar.presentation.feature.scenes.opencv.view.OpenCVActivity"
            android:screenOrientation="portrait"/>

        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:name="us.cyberstar.presentation.feature.scenes.splashScene.view.SplashActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--
 This tag indicates that this application requires ARCore.  This results in the Google Play
         Store downloading and installing ARCore along with the application.
        -->
        <meta-data
                android:name="com.google.ar.core"
                android:value="required"/>
        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="71f60e2bdd8db3251772a67bae3102eb6d4cdd1f"/>
    </application>

</manifest>